pipeline {
    agent any
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    stages {
        stage('Scan') {
            steps {
                script {
                    // Use the retrieved environment variables
                    withSonarQubeEnv('Sonarqube') { 
                        sh "chmod +x ./mvnw"
                        sh "./mvnw clean verify sonar:sonar "
                    }
                }
            }
        }
    }
}

pipeline {
    agent any

    tools {
        maven 'Maven3' // Ensure this matches the name configured in Global Tool Configuration
    }

    environment {
        SONARQUBE_ENV = 'SonarQube' // Ensure this matches the name configured in SonarQube servers
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                script {
                    try {
                        sh 'mvn clean compile'
                    } catch (Exception e) {
                        echo "Build failed but proceeding to SonarQube analysis."
                    }
                }
            }
        }
        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh 'mvn sonar:sonar'
                }
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
            archiveArtifacts artifacts: '**/target/*.jar', allowEmptyArchive: true
        }
    }
}
